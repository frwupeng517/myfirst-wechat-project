/* pages/message/message.wxss */

.head{
  padding: 20rpx;
  background-color: #fff;
  border-bottom: 1px solid #eee;
}
.head .search-box{
  display: flex;
  width: 100%;
  height: 66rpx;
  line-height: 66rpx;
  background-color: #eee;
  border-radius: 10rpx;
}
.search-box .search-icon{
  margin: 15rpx;
}
.search-box input{
  width: 100%;
  height: 100%;
  font-size: 30rpx;
  color: #666;
}
.msg-group-item{
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
}
.msg-group-item__left image{
  width: 80rpx;
  height: 80rpx;
}
.msg-group-item__right{
  flex: 1;
  margin-left: 20rpx;
  padding: 10rpx 0;
  overflow: hidden;
  border-bottom: 1px solid #eee;
  color: #999;
}
.content-top{
  display: flex;
  font-size: 34rpx;
  color: #333;
}
.content-top .item-title{
  font-size: 34rpx;
}
.content-top .item-time{
  flex: 1;
  text-align: right;
  color: #999;
  font-size: 24rpx;
}
.content-top .item-type{
  margin-left: 20rpx;
  padding: 0 40rpx;
  align-self: center;
  border-radius: 10rpx;
  font-size: 24rpx;
  color: #fff;
  background: #3dcefb;
}
.content-bottom{
  margin-top: 10rpx;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.customer-logo{
  position: fixed;
  right: 4%;
  bottom: 12%;
}
.customer-logo image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
























.footer{
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
  width: 100%;
  border-top: 1px solid #eee;
  background-color: #fff;
  z-index: 999;
}
.footer .nav{
  position: relative;
  width: 25%;
  padding: 18rpx 0 10rpx;
  color: #666;
  text-align: center;
}
.footer .nav:first-child .nav_txt{
  color: #f73e39;
}
.footer .nav .nav_img{
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 8rpx;
}
.footer .nav .nav_num{
  position: absolute;
  width: 48rpx;
  height: 30rpx;
  line-height: 30rpx;
  border-radius: 20rpx;
  background-color: #f73e39;
  color: #fff;
  font-size: 24rpx;
  top: 4rpx;
  right: 40rpx;
}
.footer .nav .nav_txt{
  font-size: 24rpx;
}