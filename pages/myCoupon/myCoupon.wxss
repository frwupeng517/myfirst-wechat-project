page{
  background-color: #eee;
}
.myCoupon{
  padding: 10rpx 20rpx 40rpx;
}
.card{
  margin-top: 20rpx;
  border-radius: 10rpx;
  background-color: #fff;
  overflow: hidden;
}
.card-info{
  display: flex;
  overflow: hidden;
  border-bottom: 1px solid #ccc;
}
.card-info .left{
  width: 27%;
  padding: 20rpx 0;
  color: #fff;
  background-color: #fe8191;
  box-sizing: border-box;
}
.card-info .left .amount{
  text-align: center;
  font-size: 54rpx;
}
.card-info .left .name{
  text-align: center;
  font-size: 26rpx;
}
.card-info .main{
  position: relative;
  flex: 1;
  padding-left: 20rpx;
  font-size: 24rpx;
}
.card-info .main .status{
  margin-top: 30rpx;
  color: #ef5b5b;
}
.card-info .main .usage, .card-info .main .deadline{
  margin-top: 15rpx;
  color: #aaa;
  font-size: 20rpx;
}
.card-info .main .icon_bg{
  position: absolute;
  right: 0;
  top: 0;
  border-top: 35px solid #fe8191;
  border-left: 55px solid transparent;
}
.card-info .main .icon_title{
  position: absolute;
  top: 6rpx;
  right: 0;
  color: #fff;
}
.card-info .main .down{
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  color: #aaa;
  border: 1px solid #aaa;
  border-radius: 50%;
}
.card-remark{
  padding: 24rpx;
  background-color: #fff;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}
.card-remark .remark{
  margin-bottom: 4rpx;
  font-size: 22rpx;
  color: #aaa;
}
