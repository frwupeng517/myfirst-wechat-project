<view class="section">
  <view class="slider-bar">
    <view class="slider {{selectedIndex == index ? 'selected' : ''}}" wx:for="{{slider}}" wx:key="{{index}}" data-index="{{index}}" bindtap='toggleSlider'>{{item}}</view>
    <view class="bar" style="width: {{width}}px; transform: translateX({{scrollLeft}}px); -webkit-transform: translateX({{scrollLeft}}px)"></view>
  </view>
