          <view class="name">赵丽颖</view>
          <image class="fans" src="http://www.hzmvip.com/images/fans.png"></image>
        </view>
        <view class="text">2018-8-7 17:41:55</view>
        <view class="space-between">
          <view class="text">来源：<text class="b">分享</text></view>
          <view class="text">TA的粉丝：<text class="b">0个</text></view>
        </view>
      </view>
    </view>
