/* pages/mrsDetail/mrsDetail.wxss */
page{
  background: #eee;
}
.slider-bar{
  position: relative;
  display: flex;
  margin-bottom: 4rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #ccc;
}
.slider-bar .slider{
  width: 50%;
  padding: 20rpx 0;
  text-align: center;
  font-size: 30rpx;
}
.slider-bar .slider.on{
  color: #fe6672;
}
.bar{
  position: absolute;
  bottom: 0;
  left: 0;
  height: 6rpx;
  background-color: #fe6672;
  transition: transform 0.3s;
  -webkit-transition: -webkit-transform 0.3s;
}
.details{
  margin-bottom: 20rpx;
  background-color: #fff;
}
.detail{
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}
.detail .detail-item{
  font-size: 34rpx;
}
.detail .detail-info{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  color: #333;
  font-size: 30rpx;
}
.detail .detail-info .customer{
  padding-right: 20rpx;
  border-right: 2rpx solid #999;
}
.detail .detail-info .mrs{
  display: flex;
  flex: 1;
  padding-left: 20rpx;
  color: #fe6672;
  font-size: 26rpx;
}
.detail .detail-info .status{
  font-size: 30rpx;
  color: #fe6672;
}
.detail .detail-time{
  font-size: 24rpx;
  color: #999;
}
.detail-list{
  display: flex;
}
.detail-list .list{
  flex: 1;
  padding: 20rpx 0;
  text-align: center;
  font-size: 26rpx;
  color: #666;
}
.detail-list .list:not(:last-child){
  border-right: 2rpx solid #eee;
}
.list-name{
  margin-bottom: 10rpx;
  font-size: 32rpx;
}