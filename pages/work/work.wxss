/* pages/work/work.wxss */
.section {
  padding-bottom: 20rpx;
  background-color: #eee;
}
.top {
  background: url(http://www.hzmvip.com/images/work/head_bg.jpg) no-repeat;
  background-size: 100% auto;
}
.userInfo{
  position: relative;
  display: flex;
  align-items: center;
  height: 228rpx;
  padding: 20rpx 40rpx;
}
.userInfo-main{
  display: flex;
}
.icon image{
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}
.info{
  flex: 1;
  margin-left: 20rpx;
  color: #fff;
  font-size: 12px;
}
.info .h4{
  display: flex;
  height: 50rpx;
  line-height: 50rpx;
  align-items: baseline;
}
.info .h4 .shop-name{
  margin-right: 20rpx;
  font-size: 34rpx;
}
.info .h4 .shop-state{
  font-size: 24rpx;
}
.info .p{
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
}
.userInfo-toggle{
  display: flex;
  position: absolute;
  right: 5%;
  bottom: 5%;
}
.userInfo-toggle image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.userInfo-toggle .toggle_txt{
  font-size: 24rpx;
  color: #fff;
}
.userNum{
  display: flex;
  /* justify-content: space-between; */
  background-color: rgba(250, 171, 149, 0.5);
  box-shadow: 2px 2px 3px #aaa;
}
.userNum .list{
  width: 33.33%;
  padding: 16rpx 0;
  text-align: center;
  color: #fff;
  font-size: 24rpx;
}
.userNum .list:not(:last-child) navigator{
  border-right: 1px solid #fff;
}
.list .span{
  display: flex;
  justify-content: center;
  align-items: baseline;
}
.list .span .i{
  margin-right: 10rpx;
  font-size: 34rpx;
  font-weight: 500;
}
.content{
  margin-top: 20rpx;
  background-color: #fff;
}
.head{
  padding: 20rpx;
  font-size: 28rpx;
  border-bottom: 1px solid #eee;
}
.list-content{
  display: flex;
  flex-wrap: wrap;
}
.list-content .item{
  width: 25%;
  padding: 30rpx 0;
  text-align: center;
}
.item image{
  width: 40rpx;
  height: 40rpx;
}
.item .text{
  font-size: 22rpx;
  color: #666;
}