/* pages/managerCustomerData_new/managerCustomerData_new.wxss */
.page{
  height: 100%;
  background-color: #fff;
}
.page-tab{
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  width: 100%;
  height: 90rpx;
  overflow: hidden;
  background-color: #fff;
  border-bottom:6rpx solid #eee;
  z-index: 100;
}
.page-tab .tab-item{
  width: 50%;
  padding: 20rpx;
  text-align: center;
  font-size: 30rpx;
}
.page-tab .tab-item.selected{
  color: #fe6771;
}
.tab__slider{
  position: absolute;
  content: " ";
  left: 0;
  bottom: 0;
  width: 50%;
  height: 4rpx;
  background-color: #ef5b5b;
  -webkit-transition: -webkit-transform 0.3s;
  transition: -webkit-transform 0.3s;
  transition: transform 0.3s;
  transition: transform 0.3s, -webkit-transform 0.3s;
}
.btn-group{
  position: fixed;
  display: flex;
  justify-content: center;
  width: 100%;
  margin-bottom: 30rpx;
  padding: 20rpx 0;
  background-color: #fff;
}
.btn-group .btn{
  width: 30%;
  font-size: 30rpx;
  padding: 6rpx;
  border-radius: 10rpx;
  text-align: center;
  color: #fff;
}
.btn-cancel{
  margin-right: 20rpx;
  background-color: #acacac;
}
.btn-confirm{
  background-color: #eb495e;
}
.page-content{
  height: 100%;
  padding-top: 84rpx;
  overflow: hidden;
  -webkit-overflow-scrolling: touch;
}
.section{
  padding-top: 100rpx;
}
.list{
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #eee;
}
.list .select{
  width: 46rpx;
  height: 46rpx;
  margin-right: 20rpx;
}
.user-image{
  width:90rpx;
  height: 90rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}
.main-content{
  flex: 1;
}
.main-content .name{
  font-size: 28rpx;
  color: #666;
}
.main-content .time-image{
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  margin-right: 10rpx;
}
.main-content .time-text{
  display: inline-block;
  font-size: 24rpx;
  color: #666;
}
.main-content__catlog{
  display: flex;
  align-items: center;
  padding:6rpx 0;
}
.main-content__catlog .catlog{
  display: flex;
  font-size: 22rpx;
  color: #666;
}
.main-content__catlog .catlog:first-child{
  margin-right: 50rpx;
}
.main-content__catlog .content{
  color: #fe6771;
}
.tel-icon{
  margin-top: 6rpx;
}
.tel-icon image{
  width: 50rpx;
}
.shop-customer__wrapper{
  position: fixed;
  width: 100%;
  box-sizing: border-box;
}
.search-content .top{
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1px solid #eee;
}
.backend{
  background-color: #eee;
}
.top .search-container{
  flex: 1;
}
.top .search-box{
  display: flex;
  align-items: center;
  padding: 14rpx 40rpx;
  background-color: #fff;
  border-radius: 10rpx;
}
.top .search-box image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
}
.top .search-box .placeholder-txt{
  font-size: 28rpx;
  color: #acacac;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.top .search-input{
  display: flex;
  align-items: center;
  flex: 1;
}
.search-input__inner{
  display: flex;
  align-items: center;
  width: 100%;
}
.top .search-input .search-input__box{
  display: flex;
  align-items: center;
  width: 78%;
  height: 56rpx;
  margin-right: 20rpx;
  padding: 10rpx 0;
  border-radius: 10rpx;
  background-color: #eee;
}
.search-input__box image{
  width: 30rpx;
  height: 30rpx;
  margin: 0 20rpx;
}
.search-input__box .search_input{
  width: 100%;
  font-size: 28rpx;
}
.top .search-input .search-btn{
  font-size: 28rpx;
  color: #acacac;
}
.top .add{
  position: relative;
}
.top .add .add_image{
  padding: 10rpx 30rpx 10rpx 0;
  font-size: 0;
  text-align: center;
}
.top .add .add_image .add-icon{
  width: 40rpx;
  height: 40rpx;
  margin-left: 30rpx;
}
.add .add_content{
  position: absolute;
  top: 76rpx;
  right: 8rpx;
  color: #fff;
  background-color: #333;
  border-radius: 10rpx;
  font-size: 28rpx;
  z-index: 99;
}
.add .add_content::before{
  position: absolute;
  left: 77%;
  top: -30rpx;
  display: block;
  content: '';
  width: 0;
  height: 0;
  margin-left: -16rpx;
  font-size: 0;
  border-width: 16rpx;
  border-style: dashed dashed solid;
  border-color: transparent transparent #333;
}
.add .add_content .new-item{
  display: flex;
  align-items: center;
  padding: 20rpx 40rpx;
  border-bottom: 1px solid #fff;
}
.add_content .new-item .new-item__icon{
  width: 30rpx;
  margin-right: 10rpx;
}
.add_content .new-item .new-item__text{
  width: 60rpx;
}
/* 遮罩层 */
.mask{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(15,15,26,0.7);
  z-index: 999;
}
.mask-title{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 80rpx;
  font-size: 28rpx;
  color: #6a6a6a;
  background-color: #fff;
  border: 1px solid #eee;
}
.mask-content{
  height: 500rpx;
  font-size: 28rpx;
}
.mask-content, .mask-footer{
  background-color: #fff;
}
.mask-content__title{
  position: relative;
  height: 50rpx;
  line-height: 50rpx;
  padding-left: 30rpx;
  font-weight: 400;
  background-color: #fbfbfb;
}
.mask-content__title::before{
  position: absolute;
  top: 15rpx;
  left: 0;
  display: block;
  content: '';
  width: 4rpx;
  height: 20rpx;
  background-color: #ffd161;
}
.mask-content__item{
  height: 80rpx;
  line-height: 80rpx;
  margin-left: 30rpx;
  border-bottom: 1px solid #ececec;
}
.mask-content__item.selected{
  color: #ffe6b4;
}
.mask-content__item .icon{
  margin-right: 4rpx;
  padding: 0 4rpx;
  color: #fff;
}
.mask-footer{
  display: flex;
  height: 90rpx;
  line-height: 90rpx;
}
.mask-footer .clear{
  flex: 1;
  font-size: 25rpx;
  padding-left: 30rpx;
}
.mask-footer .confirm{
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 210rpx;
  font-size: 35rpx;
  background-color: #ffd161;
}
.mask-footer .confirm .confirm-number{
  margin-left: 15rpx;
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  border-radius: 50%;
  color: #ffd161;
  background-color: #000;
  font-size: 25rpx
}